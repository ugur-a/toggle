public class Main {
    public static void main(String[] args) {
        int sayi = 1;
        boolean isPrime = true;
        if (sayi == 1) {
            System.out.println("Sayı asal değildir.");
            return;
        }

        if (sayi < 1) {
            System.out.println("Geçersiz sayı.");
        }
        for (int i = 2; i < sayi; i++) {
            if (sayi % i == 0) {
                isPrime = false;
            }
        }
        if (isPrime) {
            System.out.println(sayi + " Sayası asaldır.");
        }
        System.out.println(sayi + " Sayası asal değildir.");


    }
}
